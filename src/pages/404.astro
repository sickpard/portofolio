---
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

import Layout from "@layouts/Layout.astro";
import TopButton from "@parts/top_button.astro";
---

<Layout>
  <TopButton />

  <section id="404" class="container mx-auto px-5 py-24 min-h-[calc(100vh-200px)] flex flex-col items-center justify-center">
    
    <div class="w-full max-w-3xl mx-auto mb-12 fade-item transition-all duration-900 opacity-0 translate-y-10">
      <div class="flex flex-col items-center">
        <h1 class="text-7xl md:text-9xl font-extrabold text-gray-800 tracking-tighter relative inline-block">
          <span class="relative z-10">404</span>
          <span class="absolute -bottom-2 left-0 w-full h-3 bg-red-600 rounded-full"></span>
        </h1>
        <p class="text-xl md:text-2xl mt-4 font-semibold text-gray-600 border-l-4 border-r-4 border-gray-300 px-4">
          {t("404.pageNotFound") || "Pagina non trovata"}
        </p>
      </div>
    </div>

    <div
      class="max-w-3xl mx-auto text-center fade-item transition-all duration-900 opacity-0 translate-y-10"
      style="transition-delay: 100ms"
    >
      
      <div class="flex justify-center items-center mb-10">
        <div class="w-32 h-32 rounded-full bg-red-600 border-4 border-white flex items-center justify-center shadow-lg">
          <div class="w-20 h-4 bg-white rounded-sm"></div>
        </div>
      </div>

      <p
        class="text-xl md:text-2xl text-gray-700 mb-10 fade-item transition-all duration-900 opacity-0 translate-y-10"
        style="transition-delay: 200ms"
      >
        { t("404.description") || "Sembra che ti sia perso nel traffico digitale. La pagina che stai cercando non è disponibile o è stata spostata." }
      </p>

      <div
        class="flex flex-wrap justify-center gap-4 fade-item transition-all duration-900 opacity-0 translate-y-10"
        style="transition-delay: 300ms"
      >
        <a href="/" class="px-8 py-3 bg-gray-600 hover:bg-gray-700 text-white font-medium rounded-lg transition-colors duration-300 flex items-center shadow-md">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 9V5.25A2.25 2.25 0 0 1 10.5 3h6a2.25 2.25 0 0 1 2.25 2.25v13.5A2.25 2.25 0 0 1 16.5 21h-6a2.25 2.25 0 0 1-2.25-2.25V15m-3 0-3-3m0 0 3-3m-3 3H15" />
          </svg>
          
          </svg>
          {t("404.backToHome") || "Torna alla Home"}
        </a>

        <a
          href="/#contattaci"
          class="px-8 py-3 bg-white hover:bg-gray-100 text-gray-600 font-medium rounded-lg transition-colors duration-300 border border-gray-200 flex items-center shadow-sm"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 mr-2"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          {t("404.contact_us") || "Contattaci"}
        </a>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Animazione al momento del caricamento della pagina
  document.addEventListener("DOMContentLoaded", () => {
    setTimeout(() => {
      document.querySelectorAll(".fade-item").forEach((item, index) => {
        setTimeout(() => {
          item.classList.remove("opacity-0", "translate-y-10");
        }, index * 150);
      });
    }, 100);
  });
</script>
